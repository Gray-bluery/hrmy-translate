{
  "name": "호리씨와 미야무라군 번역",
  "version": "0.0.1",
  "description": "호리씨와 미야무라군 번역 제공 예정. 비공식.",
  "author": "aquaclara",
  "content_scripts": [
    {
      "matches": [
        "*://dka-hero.me/t_c.html",
        "*://dka-hero.me/hm*_*/pict_com_*.html",
        "*://dka-hero.me/aco/c.html",
        "*://dka-hero.me/aco/*/c.html",
        "*://dka-hero.me/pict_01/*.html",
        "*://dka-hero.me/pict_03/com/*/*.html"
      ],
      "js": ["dist/index.js"],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": ["dist/background.js"],
    "persistent": false
  },
  "browser_action": {},
  "permissions": ["tabs", "storage", "*://dka-hero.me/*"],
  "web_accessible_resources": ["translations/*.json", "translations/**/*.json"],
  "manifest_version": 2
}
